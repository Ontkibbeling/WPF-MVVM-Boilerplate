<UserControl x:Class="MyApp.Components.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp.Components"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="100">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="Background" Value="#FF59ADFF" />
        </Style>
    </UserControl.Resources>

    <Grid Grid.Column="0">
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*" MinHeight="50" />
            <RowDefinition Height=".1*" MinHeight="50" />
            <RowDefinition Height=".1*" MinHeight="50" />
            <RowDefinition Height=".1*" MinHeight="50" />
            <RowDefinition Height=".1*" MinHeight="50" />
            <RowDefinition Height=".1*" MinHeight="50" />
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="10" BorderThickness="0" Background="#FF59ADFF" />
        <Button Content="Home" Command="{Binding cmdNavEmptyView}" Grid.Row="0" />
    </Grid>
</UserControl>
